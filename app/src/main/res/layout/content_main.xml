<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.music.player.bhandari.m.activity.ActivityMain">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        app:tabMode="scrollable"
        app:tabGravity="center"
        app:tabMinWidth="@dimen/cm_tab_width_min"
        app:tabSelectedTextColor="@color/colorwhite"
        app:tabTextColor="@color/light_gray1"
        app:tabIndicatorColor="@android:color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabs">


        <View
            android:id="@+id/overlay_for_gradient"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/image_view_view_pager"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />


        <View
            android:id="@+id/black_overlay"
            android:background="@drawable/black_overlay"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"/>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
             />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/border_view"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/border_2dp"
        android:layout_height="match_parent"
        android:orientation="horizontal" />



</RelativeLayout>
